{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "zhaoxi"
  },
  "Elasticsearch": {
    "ConnectionString": "http://localhost:9200",
    "Database": "zhaoxi"
  },
  //数据库连接字符串
  "ConnectionStrings": {
    "MySqlMainConn": "Data Source=localhost;port=3306;Initial Catalog=zhaoxi;user id=root;password=123456;charset=utf8",
    "MySqlPicConn": "Data Source=localhost;port=3306;Initial Catalog=zhaoxi;user id=root;password=123456;charset=utf8",
    "SqlServerMainConn": "Server=.;Initial Catalog=zhaoxi;User ID=sa;Password=123456",
    "SqlServerPicConn": "Server=.;Initial Catalog=zhaoxi;User ID=sa;Password=123456"
  },
  //Redis缓存
  "RedisCaching": {
    "Enabled": false,
    "RedisDbInt": "0",
    "WriteServerList": "192.168.23.128:6379",
    "ReadServerList": "192.168.23.128:6379",
    "MaxWritePoolSize": "5000",
    "MaxReadPoolSize": "5000",
    "AutoStart": "true",
    "LocalCacheTime": "180",
    "RecordeLog": "false"
  },
  "AppSettings": {
    //网站适用于数据库类型 mysql sqlserver
    "DBServerType": "mysql"
  }
}
